<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cellSelector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sel_transparent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/cell_header_programs" />

    <RelativeLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/padding_medium"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/P_NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/font_content_medium" />

        <TextView
            android:id="@+id/P_EDUDAY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/P_NAME"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/font_content_small" />

        <TextView
            android:id="@+id/P_EDUPERSON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/P_EDUDAY"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:text="@string/app_name"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/font_content_small" />

        <TextView
            android:id="@+id/P_EAMAX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/P_EDUDAY"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:text="@string/app_name"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/font_content_small" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/document"
            android:contentDescription="@string/contentdesc_cell_document" />
    </RelativeLayout>

</LinearLayout>